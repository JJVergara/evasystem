{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Strict Type-Checking - Enabled incrementally for better type safety */
    "strict": true,
    "strictNullChecks": false,          // TODO: Enable after aligning types with Supabase nullability
    "noUnusedLocals": false,            // TODO: Enable and clean up unused imports
    "noUnusedParameters": false,        // TODO: Enable and clean up unused params
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,  // Too strict for current codebase
    "exactOptionalPropertyTypes": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
